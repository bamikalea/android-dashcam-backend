<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="accent">#FF5722</color>
    <color name="action_panel_bg">#3D3D3D</color>
    <color name="background_dark">#121212</color>
    <color name="background_light">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="button_disabled_bg">#757575</color>
    <color name="button_emergency_bg">#D32F2F</color>
    <color name="button_primary_bg">#1976D2</color>
    <color name="button_secondary_bg">#424242</color>
    <color name="button_settings_bg">#616161</color>
    <color name="control_panel_bg">#2D2D2D</color>
    <color name="emergency_orange">#FF5722</color>
    <color name="emergency_red">#D32F2F</color>
    <color name="emergency_yellow">#FFC107</color>
    <color name="log_bg">#0A0A0A</color>
    <color name="log_text">#00FF00</color>
    <color name="primary">#1976D2</color>
    <color name="primary_dark">#1565C0</color>
    <color name="primary_light">#BBDEFB</color>
    <color name="semi_transparent">#80000000</color>
    <color name="status_error">#F44336</color>
    <color name="status_info">#2196F3</color>
    <color name="status_panel_bg">#1E1E1E</color>
    <color name="status_success">#4CAF50</color>
    <color name="status_warning">#FF9800</color>
    <color name="text_disabled">#80FFFFFF</color>
    <color name="text_primary">#FFFFFF</color>
    <color name="text_secondary">#B3FFFFFF</color>
    <color name="transparent">#00000000</color>
    <color name="white">#FFFFFF</color>
    <string name="app_name">Fleet Management</string>
    <string name="dashcam_monitoring">Dashcam Monitoring Active</string>
    <string name="location_tracking">Location Tracking Active</string>
    <string name="service_running">Fleet Management Service Running</string>
    <style name="TextAppearance.FleetManagementApp.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Status" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Status.Error">
        <item name="android:textColor">@color/status_error</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Status.Info">
        <item name="android:textColor">@color/status_info</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Status.Success">
        <item name="android:textColor">@color/status_success</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Status.Warning">
        <item name="android:textColor">@color/status_warning</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextAppearance.FleetManagementApp.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.FleetManagementApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        
        
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        
        <item name="materialButtonStyle">@style/Widget.FleetManagementApp.Button</item>
    </style>
    <style name="Theme.FleetManagementApp.Fullscreen" parent="Theme.FleetManagementApp">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Widget.FleetManagementApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="Widget.FleetManagementApp.Button.Emergency" parent="Widget.FleetManagementApp.Button">
        <item name="backgroundTint">@color/button_emergency_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.FleetManagementApp.Button.Primary" parent="Widget.FleetManagementApp.Button">
        <item name="backgroundTint">@color/button_primary_bg</item>
    </style>
    <style name="Widget.FleetManagementApp.Button.Secondary" parent="Widget.FleetManagementApp.Button">
        <item name="backgroundTint">@color/button_secondary_bg</item>
    </style>
    <style name="Widget.FleetManagementApp.Button.Settings" parent="Widget.FleetManagementApp.Button">
        <item name="backgroundTint">@color/button_settings_bg</item>
    </style>
</resources>